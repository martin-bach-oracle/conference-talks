{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"includes": [
			"src/typescript/*.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120
		}
	}
}